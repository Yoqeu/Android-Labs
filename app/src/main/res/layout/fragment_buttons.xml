<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#FFFFFF"
             tools:context=".ButtonsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="326dp"
            android:background="#A7CCD1"
            app:layout_constraintEnd_toEndOf="@+id/buttonConvert"
            app:layout_constraintStart_toEndOf="@+id/buttonConvert"
            tools:context=".ContentActivity">

        <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="43dp"
                android:contentDescription="@string/todo"
                android:src="?attr/actionModeCopyDrawable"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/spinner2"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/imageButton3" />

        <Spinner
                android:id="@+id/spinner2"
                android:layout_width="103dp"
                android:layout_height="0dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="43dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageButton4"
                app:layout_constraintTop_toBottomOf="@+id/imageButton" />

        <EditText
                android:id="@+id/editTextNumber"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="66dp"
                android:layout_marginBottom="98dp"
                android:autofillHints=""
                android:background="#BEFDFFFC"
                android:ems="10"
                android:gravity="center"
                android:inputType="numberDecimal"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintEnd_toStartOf="@+id/imageButton3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="LabelFor" />

        <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="43dp"
                android:background="#BEFDFFFC"
                android:gravity="center"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="18sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageButton4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextNumber" />

        <Spinner
                android:id="@+id/spinner1"
                android:layout_width="103dp"
                android:layout_height="0dp"
                android:layout_marginTop="66dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="26dp"
                app:layout_constraintBottom_toTopOf="@+id/imageButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageButton3"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="11dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="18dp"
                android:contentDescription="@string/todo"
                android:src="@android:drawable/stat_notify_sync"
                android:tint="#000000"
                app:layout_constraintBottom_toTopOf="@+id/spinner2"
                app:layout_constraintEnd_toEndOf="@+id/spinner2"
                app:layout_constraintStart_toStartOf="@+id/spinner2"
                app:layout_constraintTop_toBottomOf="@+id/spinner1" />

        <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="66dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="98dp"
                android:contentDescription="@string/todo"
                android:src="?attr/actionModeCopyDrawable"
                app:layout_constraintBottom_toTopOf="@+id/imageButton4"
                app:layout_constraintEnd_toStartOf="@+id/spinner1"
                app:layout_constraintStart_toEndOf="@+id/editTextNumber"
                app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>